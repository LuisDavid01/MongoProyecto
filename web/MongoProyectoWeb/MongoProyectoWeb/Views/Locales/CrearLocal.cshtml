@model LocalesModel

<form asp-controller="Locales" asp-action="CrearLocal">
    <div class="row">
        <h2 class="text-center">Crear Local</h2>
        <div class="form-group col-md-12 mb-4">
            <input type="text" required class="form-control input-lg" asp-for="_id" placeholder="Id">
        </div>
        <div class="form-group col-md-12 mb-4">
            <input type="text" required class="form-control input-lg" asp-for="nombre" placeholder="Nombre del local">
        </div>
        <div class="form-group col-md-12 mb-4">
            <!-- Dropdown para seleccionar la categoría -->
            <select asp-for="categoria" class="form-control input-lg" asp-items="ViewBag.Categorias">
                <option value="">Seleccione una categoría</option>
            </select>
        </div>
        <div class="form-group col-md-12">
            <textarea class="form-control input-lg" required asp-for="descripcion" placeholder="Descripción"></textarea>
        </div>
        <div class="col-md-12">
            <button type="submit" class="btn btn-primary btn-pill mb-4">Crear</button>
        </div>
    </div>
</form>
