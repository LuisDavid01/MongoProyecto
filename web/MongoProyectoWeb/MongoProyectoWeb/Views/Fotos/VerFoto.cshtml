@model FotosModel

<form asp-controller="Fotos" asp-action="EditarFoto">
    <div class="container my-5">
        <h2 class="text-center mb-4">Ver y Editar Foto</h2>

        <div class="row justify-content-center">
            <div class="col-md-8">

                <input type="hidden" asp-for="_id" />

                <div class="form-group mb-3">
                    <input type="text" required class="form-control form-control-lg" asp-for="Id_local" placeholder="ID del local" />
                </div>

                <div class="form-group mb-3">
                    <input class="form-control form-control-lg" asp-for="Ruta_imagen" placeholder="Ruta de la imagen" />
                </div>

                <div class="text-center">
                    <button type="submit" class="btn btn-primary btn-lg">Editar Foto</button>
                </div>
            </div>
        </div>
    </div>
</form>
