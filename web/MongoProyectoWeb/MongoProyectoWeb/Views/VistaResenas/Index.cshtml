@model List<MongoProyectoWeb.Models.VistaResenasModel>

@{
    ViewData["Title"] = "Vista de Reseñas";
    var total = Model?.Sum(x => x.total_resenas) ?? 0;
}

@if (Model == null || !Model.Any())
{
    <form asp-action="ActualizarVista" method="post">
        <button type="submit" class="btn btn-warning mb-3">
            <i class="bi bi-arrow-clockwise"></i> Actualizar Vista
        </button>
    </form>

    <p>No hay reseñas para mostrar.</p>
}
else
{
    <h2 class="text-center mb-4">Resumen de Reseñas</h2>

    <div class="d-flex justify-content-between align-items-center mb-3">
        <h4 class="mb-0">Total General de Reseñas: <strong>@total</strong></h4>

        <form asp-action="ActualizarVista" method="post">
            <button type="submit" class="btn btn-warning">
                <i class="bi bi-arrow-clockwise"></i> Actualizar Vista
            </button>
        </form>
    </div>

    <table class="table table-striped table-bordered table-hover">
        <thead class="thead-dark">
            <tr>
                <th>ID Local</th>
                <th>Total de Reseñas</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item._id</td>
                    <td>@item.total_resenas</td>
                </tr>
            }
        </tbody>
    </table>
}
