@model List<ResenasModel>

@if (Model == null || !Model.Any())
{

    <p>No hay Resenass para mostrar.</p>
}
else
{
    <h2 class="text-center mb-4">Consulta de Reseñas</h2>

    <a class="btn btn-info mb-3" asp-area="" asp-controller="VistaResenas" asp-action="Index">
        <i class="bi bi-eye"></i> Ver Resumen de Reseñas
    </a>

    <table class="table table-striped table-bordered table-hover">
        <thead class="thead-dark">
            <tr>
                <th>Usuario</th>
                <th>Comentario</th>
                <th>Calificacion</th>
                <th>local</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var Resenas in Model)
            {
                <tr>
                    
                    <td>@Resenas.IdUsuario</td>
                    <td>@Resenas.Comentario</td>
                    <td>@Resenas.Calificacion ⭐</td>
                    <td>@Resenas.IdLocal</td>
                    <td>
                      

                        <form asp-controller="Resenas" asp-action="EliminarResena" method="post" style="display:inline;">
                            <input type="hidden" name="id" value="@Resenas._id" />
                            <button type="submit" class="btn btn-danger" onclick="return confirm('¿Seguro que quieres eliminar este Reseña?');">
                                <i class="bi bi-trash"></i> Eliminar
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}