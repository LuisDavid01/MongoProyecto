@model MongoProyectoWeb.Models.ResenasModel

<form asp-controller="Resenas" asp-action="EditarResena">
    <div class="row">

        <h2 class="text-center">Ver y editar usuario</h2>
        <div class="form-group col-md-12 mb-4">
            <label asp-for="Calificacion">Calificación</label>
            <select asp-for="Calificacion" class="form-control">
                <option value="0">0 estrellas</option>
                <option value="1">1 estrella</option>
                <option value="2">2 estrellas</option>
                <option value="3">3 estrellas</option>
                <option value="4">4 estrellas</option>
                <option value="5">5 estrellas</option>
            </select>

        </div>
        <div class="form-group col-md-12 mb-4">
            <label asp-for="Calificacion">Comentario</label>
            <textarea class="form-control  input-lg" asp-for="Comentario" placeholder="comentario">
            </textarea>
        </div>

        <!-- Info que no se puede modificar -->
        <input type="hidden" asp-for="_id" />
        <input type="hidden" asp-for="IdUsuario" />
        <input type="hidden" asp-for="IdLocal" />


        <div class="col-md-12">

            <button type="submit" class="btn btn-primary btn-pill mb-4">editar</button>


        </div>
    </div>
</form>