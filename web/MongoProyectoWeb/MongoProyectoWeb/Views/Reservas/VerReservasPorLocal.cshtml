@model MongoProyectoWeb.Models.LocalConReservasModel

<h1>@Model.Nombre</h1>
<p>Descripción: @Model.Descripcion</p>


<h2>Reservas</h2>

<div class="row">
    @foreach (var Reserva in Model.Reservas)
    {
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Fecha: @Reserva.fecha</h5>                    
                    <p class="card-text">Hora: @Reserva.hora</p>
                    <p class="card-text">Cantidad de personas: @Reserva.numero_personas</p>
                    <p class="card-text">Descripción: @Reserva.descripcion</p>
                    <div class="d-flex">
                        <a class="btn btn-success " asp-area="" asp-controller="Reservas" asp-route-id="@Reserva._id" asp-action="VerReserva"> Editar Reserva</a>
                        <form asp-controller="Reservas" asp-action="EliminarReserva" method="post" style="display:inline;">
                            <input type="hidden" name="id" value="@Reserva._id" />
                            <button type="submit" class="btn btn-warning" onclick="return confirm('¿Seguro que quieres eliminar esta Reserva?');">Eliminar Reserva</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
