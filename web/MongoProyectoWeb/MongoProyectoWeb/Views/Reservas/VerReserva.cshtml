@model MongoProyectoWeb.Models.ReservasModel

<form asp-controller="Reservas" asp-action="EditarReserva">
    <div class="container my-5">
        <h2 class="text-center mb-4">Ver y editar reserva</h2>

        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="form-group mb-3">
                    <label asp-for="fecha">Fecha</label>
                    <input type="date" class="form-control form-control-lg" asp-for="fecha" />
                </div>

                <div class="form-group mb-3">
                    <label asp-for="hora">Hora</label>
                    <input type="time" class="form-control form-control-lg" asp-for="hora" />
                </div>

                <div class="form-group mb-3">
                    <label asp-for="numero_personas">Número de personas</label>
                    <input type="number" class="form-control form-control-lg" asp-for="numero_personas" min="1" />
                </div>

                <div class="form-group mb-3">
                    <label asp-for="descripcion">Descripción</label>
                    <textarea class="form-control form-control-lg" asp-for="descripcion" placeholder="Escribe una descripción..."></textarea>
                </div>

                <!-- Info que no se puede modificar -->
                <input type="hidden" asp-for="_id" />
                <input type="hidden" asp-for="IdUsuario" />
                <input type="hidden" asp-for="IdLocal" />

                <div class="text-center">
                    <button type="submit" class="btn btn-primary btn-lg">Editar</button>
                </div>

            </div>
        </div>
    </div>
</form>
