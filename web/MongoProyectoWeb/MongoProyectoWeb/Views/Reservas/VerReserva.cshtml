@model MongoProyectoWeb.Models.ReservasModel

<form asp-controller="Reservas" asp-action="EditarReserva">
    <div class="row">

        <h2 class="text-center">Ver y editar reserva</h2>

        <div class="form-group col-md-6 mb-4">
            <label asp-for="fecha">Fecha</label>
            <input type="date" class="form-control" asp-for="fecha" />
        </div>

        <div class="form-group col-md-6 mb-4">
            <label asp-for="hora">Hora</label>
            <input type="time" class="form-control" asp-for="hora" />
        </div>

        <div class="form-group col-md-6 mb-4">
            <label asp-for="numero_personas">Número de personas</label>
            <input type="number" class="form-control" asp-for="numero_personas" min="1" />
        </div>

        <div class="form-group col-md-12 mb-4">
            <label asp-for="descripcion">Descripción</label>
            <textarea class="form-control input-lg" asp-for="descripcion" placeholder="Escribe una descripción..."></textarea>
        </div>

        <!-- Info que no se puede modificar -->
        <input type="hidden" asp-for="_id" />
        <input type="hidden" asp-for="IdUsuario" />
        <input type="hidden" asp-for="IdLocal" />

        <div class="col-md-12">
            <button type="submit" class="btn btn-primary btn-pill mb-4">Editar</button>
        </div>
    </div>
</form>
