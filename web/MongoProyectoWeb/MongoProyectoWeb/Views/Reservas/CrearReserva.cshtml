@model MongoProyectoWeb.Models.ReservasModel

<form asp-controller="Reservas" asp-action="CrearReserva">
    <div class="container my-5">
        <h2 class="text-center mb-4">Agregar Reserva</h2>

        <div class="row justify-content-center">
            <div class="col-md-8">

                <!-- ID de la reserva -->
                <div class="form-group mb-3">
                    <input type="text" required class="form-control form-control-lg" asp-for="_id" placeholder="ID de la reserva" />
                </div>

                <!-- Selección de usuario -->
                <div class="form-group mb-3">
                    <label asp-for="IdUsuario">Usuario</label>
                    <select asp-for="IdUsuario" class="form-control form-control-lg" required>
                        <option value="">Seleccione un usuario</option>
                        @foreach (var usuario in ViewBag.Usuarios)
                        {
                            <option value="@usuario.Value">@usuario.Text</option>
                        }
                    </select>
                </div>

                <input type="hidden" asp-for="IdLocal" />

                <!-- Fecha -->
                <div class="form-group mb-3">
                    <label asp-for="fecha">Fecha</label>
                    <input type="date" class="form-control form-control-lg" asp-for="fecha" required />
                </div>

                <!-- Hora -->
                <div class="form-group mb-3">
                    <label asp-for="hora">Hora</label>
                    <input type="time" class="form-control form-control-lg" asp-for="hora" required />
                </div>

                <!-- Número de personas -->
                <div class="form-group mb-3">
                    <label asp-for="numero_personas">Número de personas</label>
                    <input type="number" class="form-control form-control-lg" asp-for="numero_personas" min="1" required />
                </div>

                <!-- Descripción -->
                <div class="form-group mb-3">
                    <label asp-for="descripcion">Descripción</label>
                    <textarea class="form-control form-control-lg" asp-for="descripcion" placeholder="Descripción de la reserva" required></textarea>
                </div>

                <!-- Botón -->
                <div class="text-center">
                    <button type="submit" class="btn btn-primary btn-lg">Guardar Reserva</button>
                </div>
            </div>
        </div>
    </div>
</form>
