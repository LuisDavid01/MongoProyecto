@model UbicacionesModel

<form asp-controller="Ubicaciones" asp-action="CrearUbicaciones">
    <div class="container my-5">
        <h2 class="text-center mb-4">Crear nueva ubicación</h2>

        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="form-group mb-3">
                    <input type="text" required class="form-control form-control-lg" asp-for="_id" placeholder="ID de la ubicación" />
                </div>
                <div class="form-group mb-3">
                    <input type="text" required class="form-control form-control-lg" asp-for="id_local" placeholder="ID del local" />
                </div>

                <div class="form-group mb-3">
                    <Select type="text" required class="form-control form-control-lg" asp-for="provincia" placeholder="Provincia">
                        <option value="San José">San José</option>
                        <option value="Alajuela">Alajuela</option>
                        <option value="Heredia">Heredia</option>
                        <option value="Cartago">Cartago</option>
                        <option value="Limón">Limón</option>
                        <option value="Guanacaste">Guanacaste</option>
                        <option value="Puntarenas">Puntarenas</option>
                    </Select>
                </div>

                <div class="form-group mb-3">
                    <textarea class="form-control form-control-lg" required asp-for="direccion" placeholder="Dirección"></textarea>
                </div>

                <div class="text-center">
                    <button type="submit" class="btn btn-primary btn-lg">Crear Ubicación</button>
                </div>
            </div>
        </div>
    </div>
</form>