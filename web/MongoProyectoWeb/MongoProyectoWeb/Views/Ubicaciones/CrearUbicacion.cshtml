@model UbicacionesModel

<form asp-controller="Ubicaciones" asp-action="CrearUbicacion" method="post">
    <div class="container my-5">
        <h2 class="text-center mb-4">Crear Nueva Ubicación</h2>

        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="form-group mb-3">
                    <label asp-for="_id">ID de la Ubicación</label>
                    <input type="text" class="form-control form-control-lg" asp-for="_id" placeholder="ID de la Ubicación" />
                    <span asp-validation-for="_id" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="provincia">Provincia</label>
                    <input type="text" class="form-control form-control-lg" asp-for="provincia" placeholder="Provincia" required />
                    <span asp-validation-for="provincia" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="direccion">Dirección</label>
                    <textarea class="form-control form-control-lg" asp-for="direccion" placeholder="Dirección"></textarea>
                    <span asp-validation-for="direccion" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label>Ejemplos</label>
                    <input type="text" class="form-control form-control-lg mb-2" name="Ejemplos[0]" placeholder="Ejemplo 1" />
                    <input type="text" class="form-control form-control-lg mb-2" name="Ejemplos[1]" placeholder="Ejemplo 2" />
                    <input type="text" class="form-control form-control-lg" name="Ejemplos[2]" placeholder="Ejemplo 3" />
                </div>

                <div class="text-center">
                    <button type="submit" class="btn btn-primary btn-lg">Crear Ubicación</button>
                </div>
            </div>
        </div>
    </div>
</form>
