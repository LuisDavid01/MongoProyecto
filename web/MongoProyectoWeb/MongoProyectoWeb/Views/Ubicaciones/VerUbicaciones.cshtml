@model UbicacionesModel

<form asp-controller="Ubicaciones" asp-action="EditarUbicaciones" method="post">
    <div class="container my-5">
        <h2 class="text-center mb-4">Editar Ubicación</h2>

        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="form-group mb-4">
                    <label asp-for="direccion">Dirección</label>
                    <input type="text" required class="form-control form-control-lg" asp-for="direccion" placeholder="Dirección de la ubicación" />
                    <span asp-validation-for="direccion" class="text-danger"></span>
                </div>

                <div class="form-group mb-4">
                    <label asp-for="provincia">provincia</label>
                    <textarea class="form-control form-control-lg" asp-for="provincia" placeholder="provincia"></textarea>
                    <span asp-validation-for="provincia" class="text-danger"></span>
                </div>

                <input type="hidden" asp-for="_id" />

                <div class="text-center">
                    <button type="submit" class="btn btn-primary btn-lg btn-block">Guardar Cambios</button>
                </div>
            </div>
        </div>
    </div>
</form>
