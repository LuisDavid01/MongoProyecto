@model UbicacionesModel

<form asp-controller="Ubicaciones" asp-action="EditarUbicaciones">
    <div class="container my-5">
        <h2 class="text-center mb-4">Ver y Editar Ubicación</h2>

        <div class="row justify-content-center">
            <div class="col-md-8">                

                <div class="form-group mb-3">
                    <Select type="text" required class="form-control form-control-lg" asp-for="provincia" placeholder="Provincia">
                        <option value="San José">San José</option>
                        <option value="Alajuela">Alajuela</option>
                        <option value="Heredia">Heredia</option>
                        <option value="Cartago">Cartago</option>
                        <option value="Limón">Limón</option>
                        <option value="Guanacaste">Guanacaste</option>
                        <option value="Puntarenas">Puntarenas</option>
                    </Select>
                </div>

                <div class="form-group mb-4">
                    <textarea class="form-control form-control-lg" required asp-for="direccion" placeholder="Dirección"></textarea>
                </div>

                <input type="hidden" asp-for="_id" />
                <input type="hidden" asp-for="id_local" />

                <div class="text-center">
                    <button type="submit" class="btn btn-primary btn-lg btn-block">Editar Ubicación</button>
                </div>
            </div>
        </div>
    </div>
</form>
