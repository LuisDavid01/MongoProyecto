@model MenusModel

<form asp-controller="Menus" asp-action="EditarMenus">
    <div class="container my-5">
        <h2 class="text-center mb-4">Ver y Editar Menú</h2>

        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="form-group mb-4">
                    <input type="text" required class="form-control form-control-lg" asp-for="nombre_comida" placeholder="Nombre de la Comida" />
                </div>

                <div class="form-group mb-4">
                    <textarea class="form-control form-control-lg" asp-for="precio" placeholder="precio"></textarea>
                </div>

                <div class="form-group mb-4">
                    <textarea class="form-control form-control-lg" asp-for="tipo_comida" placeholder="Tipo de la comida"></textarea>
                </div>

               
                <input type="hidden" asp-for="_id" />
                <input type="hidden" asp-for="id_local" />

                <div class="text-center">
                    <button type="submit" class="btn btn-primary btn-lg btn-block">Editar Menú</button>
                </div>
            </div>
        </div>
    </div>
</form>
