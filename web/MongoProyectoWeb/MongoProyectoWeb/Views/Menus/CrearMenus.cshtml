@model MenusModel

<form asp-controller="Menus" asp-action="CrearMenus">
    <div class="container my-5">
        <h2 class="text-center mb-4">Crear Nuevo Menú</h2>

        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="form-group mb-3">
                    <input type="text" required class="form-control form-control-lg" asp-for="_id" placeholder="ID del Menú" />
                </div>
                
                <div class="form-group mb-3">
                    <input type="text" required class="form-control form-control-lg" asp-for="id_local" placeholder="ID del local" />
                </div>

                <div class="form-group mb-3">
                    <input type="text" required class="form-control form-control-lg" asp-for="nombre_comida" placeholder="Nombre de la comida" />
                </div>

                <div class="form-group mb-3">
                    <textarea class="form-control form-control-lg" asp-for="precio" placeholder="Precio"></textarea>
                </div>

                <div class="form-group mb-3">
                    <textarea class="form-control form-control-lg" asp-for="tipo_comida" placeholder="Descripción"></textarea>
                </div>

                
                <div class="text-center">
                    <button type="submit" class="btn btn-primary btn-lg">Crear Menú</button>
                </div>
            </div>
        </div>
    </div>
</form>
