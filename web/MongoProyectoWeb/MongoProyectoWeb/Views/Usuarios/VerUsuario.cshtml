@model UsuariosModel
<form asp-controller="Usuarios" asp-action="EditarUsuario">
    <div class="row">
        
        <h2 class="text-center">Ver y editar usuario</h2>
        <div class="form-group col-md-12 mb-4">
            <input type="text" required class="form-control input-lg" asp-for="nombre" placeholder="nombre">
        </div>
        <div class="form-group col-md-12 mb-4">
            <input type="password" class="form-control  input-lg"  asp-for="contraseña" placeholder="Contraseña">
        </div>
        <div class="form-group col-md-12 ">
            <input type="email" class="form-control  input-lg" required asp-for="correo" placeholder="correo">
        </div>
        <div class="form-group col-md-12 ">
            <input type="text" class="form-control  input-lg" required asp-for="foto_de_perfil"  placeholder="foto_de_perfil">
        </div>
        <input type="hidden" asp-for="_id" />

        <div class="col-md-12">

            <button type="submit" class="btn btn-primary btn-pill mb-4">editar</button>


        </div>
    </div>
</form>