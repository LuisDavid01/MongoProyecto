@model ContactosModel

<form asp-controller="Contactos" asp-action="EditarContactos">
    <div class="container my-5">
        <h2 class="text-center mb-4">Ver y Editar Contacto</h2>

        <div class="row justify-content-center">
            <div class="col-md-8">

                <input type="hidden" asp-for="_id" />

                <div class="form-group mb-3">
                    <input type="text" required class="form-control form-control-lg" asp-for="telefono" placeholder="Teléfono" />
                </div>

                <div class="form-group mb-3">
                    <input type="email" required class="form-control form-control-lg" asp-for="correo_electronico" placeholder="Correo Electrónico" />
                </div>

                <div class="form-group mb-3">
                    <input type="text" class="form-control form-control-lg" asp-for="redes_sociales.facebook" placeholder="Facebook" />
                </div>

                <div class="form-group mb-3">
                    <input type="text" class="form-control form-control-lg" asp-for="redes_sociales.twitter" placeholder="Twitter" />
                </div>

                <div class="form-group mb-3">
                    <input type="text" class="form-control form-control-lg" asp-for="redes_sociales.instagram" placeholder="Instagram" />
                </div>

                <div class="text-center">
                    <button type="submit" class="btn btn-primary btn-lg">Editar Contacto</button>
                </div>
            </div>
        </div>
    </div>
</form>
