@model MongoProyectoWeb.Models.EventosEspecialesModel

<form asp-controller="EventosEspeciales" asp-action="CrearEventosEspeciales">
    <div class="container my-5">
        <h2 class="text-center mb-4">Crear Nuevo Evento Especial</h2>

        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="form-group mb-3">
                    <input type="text" required class="form-control form-control-lg" asp-for="_id" placeholder="ID del evento" />
                </div>
                <div class="form-group mb-3">
                    <input type="text" required class="form-control form-control-lg" asp-for="nombre_evento" placeholder="Nombre del evento" />
                </div>
                <div class="form-group mb-3">
                    <textarea class="form-control form-control-lg" required asp-for="descripcion" placeholder="Descripción del evento"></textarea>
                </div>
                <div class="form-group mb-3">
                    <input type="date" required class="form-control form-control-lg" asp-for="fecha" placeholder="Fecha del evento" />
                </div>
                <div class="form-group mb-3">
                    <input type="time" required class="form-control form-control-lg" asp-for="hora" placeholder="Hora del evento" />
                </div>
                <div class="form-group mb-3">
                    <select asp-for="id_local" class="form-control form-control-lg" asp-items="ViewBag.Locales">
                        <option value="">Seleccione un local</option>
                    </select>
                </div>
                <div class="text-center">
                    <button type="submit" class="btn btn-success btn-lg">Crear Evento</button>
                </div>
            </div>
        </div>
    </div>
</form>
