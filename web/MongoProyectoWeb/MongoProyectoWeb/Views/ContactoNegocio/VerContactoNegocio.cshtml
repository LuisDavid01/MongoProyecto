@model ContactoNegocioModel

<form asp-controller="ContactoNegocio" asp-action="EditarContactoNegocio">
    <div class="container my-5">
        <h2 class="text-center mb-4">Ver y Editar Contacto del negocio</h2>

        <div class="row justify-content-center">
            <div class="col-md-8">

                <input type="hidden" asp-for="_id" />

                <div class="form-group mb-3">
                    <input type="text" required class="form-control form-control-lg" asp-for="Id_local" placeholder="ID del local" />
                </div>
                <div class="form-group mb-3">
                    <input class="form-control form-control-lg" asp-for="email_negocio" placeholder="Email del negocio" />
                </div>
                <div class="form-group mb-3">
                    <input class="form-control form-control-lg" asp-for="telefono_negocio" placeholder="Telefono del negocio" />
                </div>

                <div class="form-group mb-3">
                    <textarea class="form-control form-control-lg" asp-for="disponibilidad" placeholder="Disponiblidad"> </textarea>
                </div>
                <div class="text-center">
                    <button type="submit" class="btn btn-primary btn-lg">Editar ContactoNegocio</button>
                </div>
            </div>
        </div>
    </div>
</form>