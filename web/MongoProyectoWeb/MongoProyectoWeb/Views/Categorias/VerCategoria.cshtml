@model CategoriasModel
<form asp-controller="Categorias" asp-action="EditarCategoria">
    <div class="row">

        <h2 class="text-center">Ver y editar usuario</h2>
        <div class="form-group col-md-12 mb-4">
            <input type="text" required class="form-control input-lg" asp-for="Nombre" placeholder="nombre">
        </div>
        <div class="form-group col-md-12 mb-4">
            <textarea  class="form-control  input-lg" asp-for="Descripcion" placeholder="Descripcion">
            </textarea>
        </div>
        @for(int i = 0; i < Model.Ejemplos.Count; i++){
            <div class="form-group col-md-12 ">
                <input type="text" class="form-control input-lg" name="Ejemplos[i]" asp-for="Ejemplos[i]" placeholder="Ejemplo" />
            </div>

        }
        
       
        <input type="hidden" asp-for="_id" />

        <div class="col-md-12">

            <button type="submit" class="btn btn-primary btn-pill mb-4">editar</button>


        </div>
    </div>
</form>