@model CategoriasModel

<form asp-controller="Categorias" asp-action="CrearCategoria" >
    <div class="row">

        <h2 class="text-center">crear categoria</h2>
        <div class="form-group col-md-12 mb-4">
            <input type="text" required class="form-control input-lg" asp-for="_id" placeholder="Id">
        </div>
        <div class="form-group col-md-12 mb-4">
            <input type="text" required class="form-control input-lg" asp-for="Nombre" placeholder="Nombre">
        </div>
        <div class="form-group col-md-12 mb-4">
            
            <textarea class="form-control  input-lg" asp-for="Descripcion" placeholder="Descripcion">
            </textarea>
        </div>
        <div class="form-group col-md-12 mb-4">
            <label>Ejemplos</label>
            <input type="text" class="form-control input-lg" name="Ejemplos[0]" placeholder="Ejemplo 1" />
            <input type="text" class="form-control input-lg" name="Ejemplos[1]" placeholder="Ejemplo 2" />
            <input type="text" class="form-control input-lg" name="Ejemplos[2]" placeholder="Ejemplo 3" />
        </div>
      


        <div class="col-md-12">

            <button type="submit" class="btn btn-primary btn-pill mb-4">Crear</button>


        </div>
    </div>
</form>
