@model HorariosModel

<form asp-controller="Horarios" asp-action="EditarHorario">
    <div class="container my-5">
        <h2 class="text-center mb-4">Ver y Editar Horario</h2>

        <div class="row justify-content-center">
            <div class="col-md-8">
                
                    <input type="hidden" asp-for="_id"/>
               
                <div class="form-group mb-3">
                    <input type="text" required class="form-control form-control-lg" asp-for="IdRestaurante" placeholder="ID del local" />
                </div>

                <div class="form-group mb-3">
                    <Select type="text" required class="form-control form-control-lg" asp-for="Dia_semana" placeholder="Dia de la semana">
                        <option value="Lunes">Lunes</option>
                        <option value="Martes">Martes</option>
                        <option value="Miercoles">Miercoles</option>
                        <option value="Jueves">Jueves</option>
                        <option value="Viernes">Viernes</option>
                        <option value="Sabado">Sabado</option>
                        <option value="Domingo">Domingo</option>
                    </Select>
                </div>

                <div class="form-group mb-3">
                    <input class="form-control form-control-lg" asp-for="Hora_apertura" placeholder="Hora de apertura" />
                </div>
                <div class="form-group mb-3">
                    <input class="form-control form-control-lg" asp-for="Hora_cierre" placeholder="Hora de apertura" />
                </div>
                <label for="Cierre_por_ocasion_especial">¿Cierra en epocas especiales?</label>
                <input type="checkbox" id="Cierre_por_ocasion_especial" asp-for="Cierre_por_ocasion_especial" />

                <div class="text-center">
                    <button type="submit" class="btn btn-primary btn-lg">Editar horario</button>
                </div>
            </div>
        </div>
    </div>
</form>
